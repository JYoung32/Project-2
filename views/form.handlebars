<div class="container d-flex min-vh-100 justify-content-center align-items-center">
    <div class="jumbotron text-center">
        <h1 class="display-4">Add yourself as a Freelancer!</h1>
        <hr class="my-5">
        <form>
            <div class="row justify-content-center">
                <div class="form-group col-6">
                    <label for="nameInput">Name</label>
                    <input type="name" class="form-control text-center" id="firstNameInput" placeholder="Name">
                </div>
                <div class="form-group col-6">
                    <label for="locationInput">Location</label>
                    <input type="name" class="form-control text-center" id="locationInput" placeholder="Location">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label for="positionInput">Position</label>
                    <input type="text" class="form-control text-center" id="positionInput" placeholder="Position">
                </div>
                <div class="form-group col-6">
                    <label for="rateInput">Rate</label>
                    <input type="text" class="form-control text-center" id="rateInput" placeholder="Dollars / Hour">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg">
                    <label for="emailInput">Email address</label>
                    <input type="email" class="form-control text-center" id="emailInput" aria-describedby="emailHelp"
                        placeholder="Email Address">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                </div>
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-primary col-4 mt-3">Submit</button>
            </div>
        </form>
    </div>
</div>