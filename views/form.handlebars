                    </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label for="positionInput">Position</label>
                    <input type="text" class="form-control text-center" id="positionInput" placeholder="Position">
                </div>
                <div class="form-group col-6">
                    <label for="rateInput">Rate</label>
                    <input type="text" class="form-control text-center" id="rateInput" placeholder="Dollars / Hour">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg">
                    <label for="emailInput">Email Address</label>
                    <input type="email" class="form-control text-center" id="emailInput" aria-describedby="emailHelp"
                        placeholder="Email Address">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                </div>
            </div>
            <div class="row justify-content-center">
                <button type="submit" id="submitFreelancer" class="btn btn-primary col-4 mt-3">Submit</button>
            </div>
        </form>
